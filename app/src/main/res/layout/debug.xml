<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#FFFFFF"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/ic_bug"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginTop="8dp"
			android:src="@drawable/ic_bug_report_48px"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="App crashed"
			android:textSize="25sp"
			android:textStyle="bold"
			android:textColor="#000000" />
		<TextView
			android:id="@+id/subtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="14dp"
			android:paddingLeft="10dp"
			android:paddingTop="8dp"
			android:paddingRight="10dp"
			android:paddingBottom="8dp"
			android:gravity="center_horizontal"
			android:text="We are sorry for this unexpected crash. Please, report us about this problem &amp; we will fix it on the next update as soon as possible"
			android:textSize="16sp"
			android:textColor="#424242" />
		<ScrollView
			android:id="@+id/scroll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="8dp"
			android:background="#F5F5F5"
			android:layout_weight="1"
			android:scrollbars="none">
			<LinearLayout
				android:id="@+id/scroll_in_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="12dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/error_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Errors will be shown here"
					android:textSize="14sp"
					android:textColor="#616161" />
			</LinearLayout>
		</ScrollView>
		<Button
			android:id="@+id/clearData_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="14dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="14dp"
			android:padding="16dp"
			android:text="Clear data"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="@color/colorControlHighlight"
			style="@style/Widget.Material3Expressive.Button" />
		<TextView
			android:id="@+id/close"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="8dp"
			android:paddingTop="12dp"
			android:paddingBottom="12dp"
			android:background="#F5F5F5"
			android:gravity="center_horizontal|center_vertical"
			android:text="Close"
			android:textSize="16sp"
			android:textColor="#000000" />
	</LinearLayout>
</LinearLayout>
